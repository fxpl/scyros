public static async Task<double> ComputePiAsync(int terms)
        {
            return await Task.Run(() =>
            {
                double pi = 0;
                for (int k = 0; k < terms; k++)
                {
                    pi += Math.Pow(-1, k) / (2 * k + 1);
                }
                return 4 * pi;
            });
        }